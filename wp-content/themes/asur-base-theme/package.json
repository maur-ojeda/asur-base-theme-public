{
    "name": "asur-base-theme",
    "version": "1.0.0",
    "description": "Tema agn√≥stico para WordPress con Bootstrap 5",
    "scripts": {
        "dev": "npm-run-all --parallel css:dev js:dev copy:assets",
        "build": "npm-run-all css:build js:build copy:assets",
        "watch": "npm-run-all --parallel css:watch js:watch copy:watch",
        "css:watch": "sass --load-path=node_modules src/scss/style.scss dist/css/style.min.css --style=compressed --no-source-map --watch",
        "js:watch": "esbuild src/js/app.js --bundle --outfile=dist/js/app.min.js --minify --watch",
        "copy:watch": "copyfiles -u 2 --watch 'src/js/**/!(*app*).js' dist/js && copyfiles -u 2 --watch 'src/img/**/*' dist/img",
        "css:dev": "sass --load-path=node_modules src/scss/style.scss dist/css/style.min.css --style=compressed --no-source-map --quiet-deps --silence-deprecation import --silence-deprecation global-builtin --silence-deprecation color-functions",
        "css:build": "sass src/scss/style.scss dist/css/style.min.css --style=compressed --no-source-map",
        "js:dev": "esbuild src/js/app.js --bundle --outfile=dist/js/app.min.js --minify",
        "js:build": "esbuild src/js/app.js --bundle --outfile=dist/js/app.min.js --minify",
        "copy:assets": "copyfiles -u 2 'src/js/**/*!(app).js' dist/js && copyfiles -u 2 'src/img/**/*' dist/img"
    },
    "author": "mojeda",
    "license": "MIT",
    "devDependencies": {
        "copyfiles": "^2.4.1",
        "esbuild": "^0.25.5",
        "npm-run-all": "^4.1.5",
        "sass": "^1.73.0"
    },
    "dependencies": {
        "aos": "^2.3.4",
        "bootstrap": "^5.3.8",
        "countup.js": "^2.9.0",
        "fastbootstrap": "^2.2.0",
        "hover.css": "^2.3.2",
        "lucide": "^0.517.0",
        "swiper": "^11.2.10"
    }
}